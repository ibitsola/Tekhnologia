@page "/profile"

@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization           
@using Tekhnologia.Views.Shared                              
@using Tekhnologia.Services.Interfaces
@inject IAuthStateService AuthState
@inject NavigationManager NavManager
@inject IUserService UserService
@inject AuthenticationStateProvider AuthStateProvider
@inject HttpClient Http


@if (!AuthState.IsLoggedIn)
{
    <RedirectToSignIn />
}
else if (loading)
{
    <p>Loading your information…</p>
}
else
{
    <h3>Your Profile</h3>

    @if (loading)
    {
        <p>Loading your information…</p>
    }
    else if (loadError != null)
    {
        <div class="notification is-danger">@loadError</div>
    }
    else if (user == null)
    {
        <div class="notification is-warning">
            We couldn’t find your profile. Please <a href="/singin">sign in</a> again.
        </div>
    }
    else
    {
        <div class="box">
            <p><strong>User ID:</strong> @user.Id</p>
            <p><strong>Name:</strong> @(string.IsNullOrEmpty(user.Name) ? "(not set)" : user.Name)</p>
            <p><strong>Email:</strong> @user.Email</p>
            <p><strong>Username:</strong> @user.UserName</p>
            <p><strong>Joined:</strong> @user.CreatedAt.ToLocalTime().ToString("f")</p>
        </div>

        <button class="button is-primary" @onclick="EditProfile">Edit Profile</button>
        <button class="button is-light" @onclick="SignOut">Sign Out</button>
    }
}

@code {
    private Tekhnologia.Models.User? user;
    private bool loading = true;
    private string? loadError;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthState.IsLoggedIn)
            return;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var id = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);

            if (string.IsNullOrEmpty(id))
            {
                loadError = "Unable to determine your user ID. Please sign in again.";
                return;
            }

            user = await UserService.GetUserProfileAsync(id);
            if (user == null)
                loadError = "Profile not found.";
        }
        catch (Exception ex)
        {
            loadError = $"Error loading profile: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void EditProfile() => NavManager.NavigateTo("/profile/edit");

    private async Task SignOut()
    {
        await Http.PostAsync("/api/auth/logout", null);
        NavManager.NavigateTo("/", forceLoad: true);
    }
}