@page "/test"
@layout Tekhnologia.Views.Shared.MainLayout

<h1>Test Page</h1>
<p>Count: @count</p>
<button @onclick="IncrementCount">Click me</button>

@code {
    private int count = 0;

    private void IncrementCount()
    {
        count++;
        Console.WriteLine($"Count incremented to: {count}");
    }
}
